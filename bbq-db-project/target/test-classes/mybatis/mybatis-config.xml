<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>

	<settings>
		<setting name="cacheEnabled" value="true" />
		<setting name="lazyLoadingEnabled" value="true" />
		<setting name="defaultStatementTimeout" value="10000" />
	</settings>
	
	<typeAliases>
		<typeAlias alias="Test" type="com.bbq.db.project.model.Test"/>
		<typeAlias alias="User" type="com.bbq.db.project.model.User"/>
		<typeAlias alias="Address" type="com.bbq.db.project.model.Address"/>
		<typeAlias alias="Book" type="com.bbq.db.project.model.Book"/>
	</typeAliases>
	
	<mappers>
		<mapper resource="mybatis/mapper/Test.xml"/>
		<mapper resource="mybatis/mapper/User.xml"/>
		<mapper resource="mybatis/mapper/Address.xml"/>	
		<mapper resource="mybatis/mapper/Book.xml"/>
	</mappers> 
</configuration>